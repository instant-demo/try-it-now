# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Pool configuration
POOL_TARGET_SIZE=10
POOL_MIN_SIZE=3
POOL_MAX_SIZE=20
POOL_REPLENISH_THRESHOLD=0.5
POOL_REPLENISH_INTERVAL=10s
POOL_DEFAULT_TTL=1h
POOL_MAX_TTL=24h

# Container runtime: "docker" (dev) or "podman" (production)
CONTAINER_MODE=docker
CONTAINER_IMAGE=nginx:alpine
CONTAINER_NETWORK=deployments_demo-net
CONTAINER_PORT_RANGE_START=32000
CONTAINER_PORT_RANGE_END=32999
# Only used in podman mode
CONTAINER_CHECKPOINT_PATH=/var/lib/checkpoints/prestashop.tar.gz

# Caddy reverse proxy
CADDY_ADMIN_URL=http://localhost:2019
BASE_DOMAIN=localhost

# Valkey (Redis-compatible)
VALKEY_ADDR=localhost:6379
VALKEY_PASSWORD=
VALKEY_DB=0

# NATS JetStream
NATS_URL=nats://localhost:4222
NATS_STREAM_NAME=PROVISIONING
NATS_WORKER_COUNT=3

# PrestaShop database
PS_DB_HOST=localhost
PS_DB_PORT=3306
PS_DB_NAME=prestashop_demos
PS_DB_USER=demo
PS_DB_PASSWORD=devpass
PS_ADMIN_PATH=admin-demo
PS_DEMO_USER=demo@demo.com
PS_DEMO_PASS=demodemo

# Rate limiting
RATE_LIMIT_HOURLY=2
RATE_LIMIT_DAILY=5
